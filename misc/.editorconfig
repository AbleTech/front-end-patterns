# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
# Default to spaces for indentation
indent_style = space
indent_size = 2
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true
# Get rid of whitespace characters at the end of lines
trim_trailing_whitespace = true

[{**.html.erb, **.html, **.scss, **.css, **.js}]
indent_style = tab
indent_size = 2

[{**.coffee, **.rb}]
indent_style = space
indent_size = 2
